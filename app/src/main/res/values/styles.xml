<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="TitleTextViewStyle">
        <item name="android:fontFamily">@font/sfui_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="StandartEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawable_enter_texts</item>
        <item name="android:fontFamily">@font/sfui_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/padding_simple_3</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="PasswordStandartEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintEnabled">false</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/colorAccent</item>
    </style>

    <style name="ParentBtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_simple_3</item>
        <item name="android:fontFamily">@font/sfui_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="OrangeBtnStyle" parent="ParentBtnStyle">
        <item name="android:background">@drawable/drawable_orange_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="StandartBtnStyle" parent="ParentBtnStyle">
        <item name="android:background">@drawable/drawable_enter_texts</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/sfui_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="BottomNavigationViewTheme" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/sfui_regular</item>
        <item name="android:textSize">@dimen/text_too_small</item>
    </style>

    <style name="Normal_2_BlackTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|top</item>
        <item name="android:fontFamily">@font/sfui_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_normal_2</item>
    </style>

    <style name="SmallerGreyTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTrolleyGray</item>
        <item name="android:textSize">@dimen/text_too_small</item>
    </style>

    <style name="BlackTextStyle_Bold">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|top</item>
        <item name="android:fontFamily">@font/sfui_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="GreyTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTrolleyGray</item>
        <item name="android:textSize">@dimen/text_normal_2</item>
    </style>

</resources>
